{
  "name": "tamo",
  "displayName": "tamo",
  "description": "tamo game",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
"activationEvents": [
  "onCommand:tamo.showView",
  "onCommand:tamo.sendMessage"
],
  "main": "./extension.js",
  "contributes": {
    "commands": [{
      "command": "tamo.showView",
      "title": "Tamagotchi Live View",
      "icon": "$(play)"
    },   {
        "command": "tamo.sendMessage",
        "title": "Send Message to Tamagotchi",
        "icon": "$(comment)"
      }],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tamagotchi",
          "title": "Tamagotchi",
          "icon": "$(heart)"
        }
      ]
    },
    "views": {
      "tamagotchi": [
        {
          "type": "webview",
          "id": "tamagotchi.liveView",
          "name": "Live View",
          "when": "true"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "tamo.showView",
          "when": "view == tamagotchi.liveView",
          "group": "navigation"
        },
        {
          "command": "tamo.sendMessage",
          "when": "view == tamagotchi.liveView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "eslint": "^9.32.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }


}
